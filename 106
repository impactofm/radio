    <script>
        const audio = document.getElementById('radioPlayer');
        const status = document.getElementById('status');
        
        // Intentar cargar la primera fuente
        audio.load();
        
        // Eventos del reproductor
        audio.addEventListener('play', () => {
            status.textContent = 'üéß Sintonizando FM Energy 106...';
            status.classList.add('playing');
        });
        
        audio.addEventListener('pause', () => {
            status.textContent = '‚è∏Ô∏è Pausado';
            status.classList.remove('playing');
        });
        
        audio.addEventListener('error', () => {
            status.textContent = '‚ùå Error al cargar la transmisi√≥n';
            status.classList.remove('playing');
            
            // Intentar con la segunda fuente
            if (audio.src.includes('zeno.fm')) {
                audio.src = 'https://fmenergy106.com.ar/stream';
                audio.load();
                status.textContent = 'üîÑ Intentando conexi√≥n alternativa...';
            }
        });
        
        audio.addEventListener('waiting', () => {
            status.textContent = '‚è≥ Cargando transmisi√≥n...';
        });
        

        
 
 
    </script>
